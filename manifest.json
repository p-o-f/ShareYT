{
  "manifest_version": 3,
  "name": "YouTube Sharing Queue",
  "version": "0.1",
  "description": "Share YouTube videos with friends and track who's watched.",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "icons/icon128.png"
  },
  "permissions": ["storage", "identity"],
  "host_permissions": ["https://www.googleapis.com/*", "https://*.firebaseio.com/*"],
  "background": {
    "service_worker": "background.js"
  }
}
